@model Biblioteca_web.Models.ComentarioModel
@{
    ViewData["Title"] = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
@if (!string.IsNullOrEmpty(@ViewBag.message))
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.message
    </div>
}
<h3 class="text-center">Dejanos tus comentarios</h3>
<form method="post" asp-action="Crear">
    <div class="row px-2 mx-2 border">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
        <div class="col-10 offset-1 mt-4">
            <!--Nombres-->
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Asunto"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Asunto" class="form-control" />
                    <span asp-validation-for="Asunto" class="text-danger"></span>
                </div>
            </div>
            <!--Apellidos-->
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Mensaje"></label>
                </div>
                <div class="col-8">
                    <textarea asp-for="Mensaje" class="form-control"></textarea>
                    <span asp-validation-for="Mensaje" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-8 offset-4">
                    <partial name="_crearVolver" />
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts{
    <script src="https://cdn.tiny.cloud/1/84uq1799d50ts22ljyt6q4ja6eg5qtoca66yj1lot8k9pxh5/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: '',
            toolbar: '',
            toolbar_mode: 'floating',
        });
    </script>
}
