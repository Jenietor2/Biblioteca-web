
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Lista de libros</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i>Crear nuevo libro</a>
        </div>
    </div>
    <br />
    <br />
    <table id="tblLibros" class="table table-striped table-bordered" style="width:100%;">
        <thead>
            <tr>
                <th>Titulo</th>
                <th>Autor</th>
                <th>Genero</th>
                <th>Usuario</th>
                <th>Descarga</th>
                <th>Opciones</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/libros.js"></script>
}
