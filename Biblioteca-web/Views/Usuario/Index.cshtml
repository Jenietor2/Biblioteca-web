
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br/>
<div class="container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Lista de usuarios</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i>Crear nuevo usuario</a>
        </div>
    </div>
    <br />
    <br />
    <table id="tblUsuarios" class="table table-striped table-bordered" style="width:100%;">
        <thead>
            <tr>
                <th>Nombres</th>
                <th>Apellidos</th>
                <th>No documento</th>
                <th>Dirección</th>
                <th>Email</th>
                <th>Opciones</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
<script src="~/js/usuarios.js"></script>
 }
